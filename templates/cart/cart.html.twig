{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h2>Votre Panier</h2>
    <div>
        <a href="{{ path('products') }}"> Voir les produits </a>
    </div>
{% if cart is empty %}
    <p>Votre panier est vide.</p>
{% else %}

    <div>
        <table>
            <tr>
                <th>Produit</th>
                <th>Taille</th>
                <th>Quantité</th>
                <th>Action</th>
            </tr>
            {% for item in cart %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.size }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>
                        <a href="{{ path('cart_remove', {'id': item.product.id, 'size': item.size}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <a href="{{ path('cart_show') }}" class="btn btn-secondary">Rafraîchir</a>
    </div>
{% endif %}

{% endblock %}
