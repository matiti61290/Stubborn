{% extends 'base.html.twig' %}

{% block title %}Stubborn: Don't compromise on your look{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<section class="highlighted_product my-5">
    <div class="container">
        <div class="row d-flex flex-row justify-content-evenly align-items-stretch g-4">
            {% for highlightedProduct in highlightedProducts %}
                <div class="col-12 col-md-6 col-lg-4"> <!-- Gestion responsive -->
                    <div class="card h-100 shadow">
                        <img class="card-img-top p-4 border-bottom" src="{{ asset('uploads/' ~ highlightedProduct.image) }}" alt="{{ highlightedProduct.name }}" />
                        <div class="card-body mb-4 d-flex flex-column flex-lg-row justify-content-between">
                            <div class="text-center">
                                <p class="card-title fw-bold">{{ highlightedProduct.name }}</p>
                                <p class="card-text">Prix: {{ highlightedProduct.price|number_format(2, ',', ' ') }}â‚¬</p>
                            </div>
                            {% if user %}
                                <a class="fw-bold py-2 px-5 btn btn-dark mt-3" href="{{ path('product_detail', {id: highlightedProduct.id}) }}">Voir</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
