{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container" style="margin-top:10rem; margin-bottom:10rem">
    <div style="width: 20%;" class="d-flex flex-column mx-auto mt-5 border border-1">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <p class="my-3 ms-3">Se connecter</p>
            <hr style="width: 90%" class="border border-info mx-auto" />
            <div class="ms-3">
                <div class="d-flex flex-column">
                    <label for="username">Adresse mail :</label>
                    <input class="py-1" style="width: 75%" type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
                </div>
                <div class="mt-3">
                    <label for="password">Mot de passe :</label>
                    <input class="py-1" style="width: 75%" type="password" name="_password" id="password" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
                    value="{{ csrf_token('authenticate') }}"
                >

                <button class="mt-3 ms-3 btn btn-lg btn-info fw-bold text-white" type="submit"
                    style="--bs-btn-padding-y: .10rem; --bs-btn-padding-x: .20rem; --bs-btn-font-size: 1.25rem;">
                    Se connecter
                </button>
            </div>
        </form>
         <hr style="width: 90%" class="border border-info mx-auto" />
        <div class="ms-3 mb-4">
            <p class="mb-0">Pas encore inscrit ?</p>
            <a class="ms-3 btn btn-info btn-info fw-bold text-white" href="{{ path('app_register')}}"
                style="--bs-btn-padding-y: .10rem; --bs-btn-padding-x: .20rem; --bs-btn-font-size: 1.25rem;">Cr√©er un compte</a>
        </div>
    </div>
</div>

{% endblock %}